<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin">
<select id="admincount" resultType="spring.model.AdminCommand">
		select conhash, sum(conlike) as hashlike,count(connum) as hashcontent from contents group by conhash
</select>

<delete id="deleteMember" parameterType="String">
delete from usertable where email=#{email}
</delete>

<insert id="admininsert" parameterType="String">
insert into withdrawal
values(num_seq.nextval, #{drawalemail}, '관리자에 의한 강제탈퇴', sysdate)
</insert>

<select id="withselect" resultType="spring.model.WithdrawalCommand">
select * from WITHDRAWAL
</select>

<insert id="withinsert" parameterType="spring.model.WithdrawalCommand">
insert into withdrawal
values(num_seq.nextval, #{drawalemail}, #{drawalcause}, sysdate)
</insert>

<select id ="report" resultType="spring.model.ContentCommand">
select * from contents where conreportcount >= 1
</select>

<select id="contentcount" resultType="int">
select count(*) from contents
</select>

<select id = "likecount" resultType="int">
select sum(conlike) from contents
</select>

<select id="today_content" resultType="int">
select count(*) from contents WHERE conmodifieddate >= TO_DATE('2016'||'-07-07','YYYY-MM-DD')
</select>

<select id = "today_like" resultType="int">
select sum(conlike) from contents WHERE conmodifieddate >= TO_DATE('2016'||'-07-07','YYYY-MM-DD')
</select>

</mapper>