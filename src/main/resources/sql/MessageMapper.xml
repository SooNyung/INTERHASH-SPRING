<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Message">

	<insert id="send" parameterType="spring.model.MessageCommand">
		insert into Message
		values(MESSAGE_SEQ.NEXTVAL,#{messageContent},#{sendEmail},#{sendNickname},#{receEmail},#{receNickname},sysdate)
	</insert>
	<select id="getMessageList" parameterType="String" resultType="spring.model.MessageCommand">
		select * from message where receEmail = #{eamil}
	</select>
	

</mapper>

